
.head-info {
	width: 94vw;
	height: 280rpx;
}
.head-info .head-left {
	height: 100%;
	-webkit-box-flex: 7;
	-webkit-flex: 7;
	        flex: 7;
}
.head-info .head-right {
	height: 100%;
	-webkit-box-flex: 3;
	-webkit-flex: 3;
	        flex: 3;
}
.sex-age {
	width: 92%;
	grid-gap: 20rpx;
}
.sex-box,
.age-box {
	height: 80rpx;
}
.sex-box picker {
	width: 64%;
}
.age-box input {
	width: 50%;
}
.name-box,
.nation-box {
	width: 92%;
	height: 80rpx;
}
.name-box input,
.nation-box picker {
	width: 80%;
}
.join-job-time,
.current-place,
.census-place,
.political-status,
.search-status {
	width: 94%;
	height: 80rpx;
}
.join-job-time picker,
.current-place picker,
.census-place picker,
.political-status picker,
.search-status picker {
	width: 66%;
}
.expect-industry {
	width: 94%;
	height: 220rpx;
}
.head-tip {
	width: 94%;
	height: 60rpx;
	line-height: 60rpx;
}
.industry-list {
	width: 94%;
	height: 160rpx;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	/* justify-content: space-between; */
	-webkit-box-pack: start;
	-webkit-justify-content: flex-start;
	        justify-content: flex-start;
}
.industry-list .item {
	height: 50rpx;
	line-height: 50rpx;
	padding: 0 10rpx;
	background-color: #F1F2F6;
	border-radius: 5rpx;
	margin-left: 20rpx;
}
.expect-job {
	width: 94%;
	height: 140rpx;
}
.job {
	width: 94%;
	height: 80rpx;
}
.re-btn {
	margin-bottom: 100rpx;
}

